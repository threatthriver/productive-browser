{
  "name": "productive-browser",
  "private": true,
  "version": "1.0.0",
  "description": "A modern, productive web browser",
  "main": "dist-electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "vite",
    "build:electron": "tsc -p electron/tsconfig.json && cp electron/package.json dist-electron/ && tsc electron/preload.ts --outDir dist-electron/",
    "build:renderer": "vite build",
    "build": "npm run build:electron && npm run build:renderer",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"sh -c 'tsc -p electron/tsconfig.json && tsc -p electron/tsconfig.json -w'\" \"vite --port 4002\" \"wait-on http://localhost:4002 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^5.18.0",
    "@mui/material": "^5.18.0",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^6.1.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.30.1",
    "vite-plugin-pwa": "^1.0.2",
    "workbox-window": "^7.3.0"
  },
  "devDependencies": {
    "@electron/typescript-definitions": "^9.1.3",
    "@types/node": "^20.19.11",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.4.0",
    "electron-devtools-installer": "^4.0.0",
    "electron-squirrel-startup": "^1.0.1",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.productive.browser",
    "productName": "Productive Browser",
    "copyright": "Copyright Â© 2023",
    "directories": {
      "output": "release/${version}",
      "buildResources": "public"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "public/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Network;WebBrowser",
      "icon": "public/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "yourusername",
      "repo": "productive-browser"
    },
    "extraResources": [
      {
        "from": "public",
        "to": "public",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
