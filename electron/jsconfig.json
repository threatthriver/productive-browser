{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "../dist",
    "rootDir": ".",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "checkJs": true,
    "allowJs": true,
    "noEmit": true
  },
  "include": [
    "**/*.js",
    "**/*.ts"
  ],
  "exclude": ["node_modules"]
}
